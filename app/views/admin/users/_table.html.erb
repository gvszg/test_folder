<div class="panel-body">
  <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
    <thead>      
      <tr>
        <th>編號</th>
        <th>名稱</th>
        <th>性別</th>
        <th>聯絡電話</th>
        <th>聯絡地址</th>
        <th>操作選項</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.user_name %></td>
          <td><%= user.gender %></td>
          <td><%= user.phone %></td>
          <td><%= user.address %></td>          
          <td>
            <li><%= link_to "編輯" %></li>
            <li><%= link_to "查看" %></li>
            <li><%= link_to "刪除" %></li>
          </td>
        </tr>        
      <% end %>      
    </tbody>
  </table>
</div>